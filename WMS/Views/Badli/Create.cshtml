            </div>
        </div>
        
        

         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
                 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
             </div>
        </div>
    </div>
    </section>
    <section class="col-md-4" style="height:620px;">
            <div class="form-horizontal">
              <div style="margin-top:10px"> 
                <h5>Emp Name</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EName" />
              </div>
              <div style="margin-top:10px"> 
                <h5>Father's Name</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EFName" />
              </div>
                 <div style="margin-top:10px"> 
                <h5>Date Of Join</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EDOB" />
              </div>
             <div style="margin-top:10px">
                <h5>Designation</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EDesignation" />
             </div>
             <div style="margin-top:10px">
                <h5>Section</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="ESection" />
            </div>
           </div>
        <div class="form-horizontal">
              <div style="margin-top:10px">
                  <hr /> 
                <h5>Badli Emp Name</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="BName" />
              </div>
              <div style="margin-top:10px"> 
                <h5>Father's Name</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="BFName" />
              </div>
             <div style="margin-top:10px">
                <h5>Designation</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="BDesignation" />
             </div>
             <div style="margin-top:10px">
                <h5>Section</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="BSection" />
            </div>
