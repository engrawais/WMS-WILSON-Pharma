 <hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
  <article>
    <section class="col-md-8">
        <div class="form-horizontal">
        @Html.ValidationSummary(true)

         <div class="form-group">
            <label class="control-label col-md-2">Emp No</label>
            <div class="col-md-10">
                @*@Html.TextBoxFor(model => model.EmpID)*@
                @Html.TextBox("EmpNo",null,new { @class = "form-control"})

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Company</label>
            <div class="col-md-10">
               @Html.DropDownList("CompanyID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
            <div style="margin-top:10px">
                <input type='button' id="buttonId" name="buttonId" value="Search Employee" class="btn btn-default btn-info"/>
             </div>    
            </div>
        </div> 

        <div class="form-group">
            <label class="control-label col-md-2">Date</label>
            <div class="col-md-10">
                <input type="date" id="Date" name="Date" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Badli Emp No</label>
            <div class="col-md-10">
                @Html.TextBox("BEmpNo",null,new { @class = "form-control"})
