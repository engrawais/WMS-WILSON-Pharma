@model WMS.Models.LvApplication

@{
    ViewBag.Title = "Create";
}

<div>
      <form class ="form-inline" role="form">
          <div class="form-group "> <h3>Add Leave Application</h3> </div>
      </form>  
</div>
 <hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
  <article>
    <section class="col-md-8">
        <div class="form-horizontal">
        @Html.ValidationSummary(true)

         <div class="form-group">
            <label class="control-label col-md-2">Emp No</label>
            <div class="col-md-10">
                @*@Html.TextBoxFor(model => model.EmpID)*@
                @Html.TextBox("EmpNo",null,new { @class = "form-control"})

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Company</label>
            <div class="col-md-10">
               @Html.DropDownList("CompanyID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                                @Html.ValidationMessageFor(model => model.CompanyID)   
            <div style="margin-top:10px">
            <input type='button' id="buttonId" name="buttonId" value="Search Employee" class="btn btn-default btn-info"/>
             </div>    
            </div>
        </div> 
       <div class="form-group">
            <label class="control-label col-md-2">Leave Type</label>
            <div class="col-md-4">
                @Html.DropDownList("LvType",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.LvType)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">From Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FromDate,@DateTime.Today.ToString("dd-MMM-yyyy"))
                @Html.ValidationMessageFor(model => model.FromDate)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">To Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ToDate)
                @Html.ValidationMessageFor(model => model.ToDate)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Half Leave</label>
            <div class="col-md-10">
                @Html.DropDownList("IsHalf", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "No", Value = "false", Selected=true},
                                        new SelectListItem { Text = "Yes", Value = "true"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                @Html.ValidationMessageFor(model => model.IsHalf)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Time</label>
            <div class="col-md-10">
                @Html.DropDownList("FirstHalf", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "Second Half", Value = "false", Selected=true},
                                        new SelectListItem { Text = "First Half", Value = "true"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                @Html.ValidationMessageFor(model => model.FirstHalf)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Leave Reason</label>
            <div class="col-md-6">
                @Html.TextArea("LvReason", null, new { cols = "80", rows = "2",@class = "form-control" })
                @Html.ValidationMessageFor(model => model.LvReason)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Address during leave</label>
            <div class="col-md-6">
                @*@Html.EditorFor(model => model.LvAddress)*@
                @Html.TextArea("LvAddress", null, new { cols = "80", rows = "2",@class = "form-control" })
                @Html.ValidationMessageFor(model => model.LvAddress)
            </div>
        </div>

         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
                 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
             </div>
        </div>
    </div>
    </section>
    <section class="col-md-4" style="height:620px;">
            <div class="form-horizontal">
              <div style="margin-top:10px"> 
                <h5>Emp Name</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EName" />
              </div>
              <div style="margin-top:10px"> 
                <h5>Father's Name</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EFName" />
              </div>
                 <div style="margin-top:10px"> 
                <h5>Date Of Birth</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EDOB" />
              </div>
             <div style="margin-top:10px">
                <h5>Designation</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EDesignation" />
             </div>
             <div style="margin-top:10px">
                <h5>Section</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="ESection" />
            </div>
                <div style="margin-top:10px">
                <h5>Casual Leaves Balance</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="ECL" />
            </div>
                <div style="margin-top:10px">
                <h5>Annual Leaves Balance</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="EAL" />
            </div>
                <div style="margin-top:10px">
                <h5>Sick Leaves Balance</h5>
                <input "form-control col-md-10 btn btn-default" type="text" id="ESL" />
            </div>
           </div>
    </section>
  </article>
    
}
<script src="@Url.Content("~/Scripts/EmpInfoLvApp.js")"></script>
<style>
    #FromDate
    {
        width:200px;
    }
    #ToDate
    {
        width:200px;
    }
</style>